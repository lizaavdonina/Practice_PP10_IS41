@model IEnumerable<SiteSB.Models.Deposit>
@{
    ViewData["Title"] = "Вклады";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-wallet2"></i> @ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Новый вклад
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Список вкладов</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>№ договора</th>
                            <th>Вкладчик</th>
                            <th>Тип вклада</th>
                            <th>Сумма</th>
                            <th>Дата открытия</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ContractNumber</td>
                                <td>@item.Depositor?.FullName</td>
                                <td>@item.DepositType?.Name</td>
                                <td>@item.Amount.ToString("C")</td>
                                <td>@item.OpenDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (item.Status == "Активный")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "Закрыт")
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@item.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info" title="Просмотр">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary" title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Close" asp-route-id="@item.Id"
                                           class="btn btn-outline-warning" title="Закрыть">
                                            <i class="bi bi-lock"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger" title="Удалить">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
